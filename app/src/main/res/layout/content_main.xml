<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkTheme2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <EditText
        android:id="@+id/inputUsername"
        android:layout_width="242dp"
        android:layout_height="90dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="216dp"
        android:autoText="false"
        android:background="@color/center"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/lightText"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="100sp"
        app:layout_editor_absoluteY="100sp" />

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="242dp"
        android:layout_height="88dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="336dp"
        android:background="@color/center"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/lightText"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="100sp"
        app:layout_editor_absoluteY="300sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="244dp"
        android:text="USER"
        android:textColor="@color/lightText"
        android:textSize="30sp"
        app:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="USER" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="352dp"
        android:text="PASS"
        android:textColor="@color/lightText"
        android:textSize="30sp"
        app:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="200dp"
        android:layout_height="88dp"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="84dp"
        android:text="Do you feel wack today?"
        android:textColor="@color/lightText"
        android:textSize="30sp"
        app:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="201dp"
        android:layout_height="92dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="476dp"
        android:shadowColor="@color/center"
        android:text="LOG IN"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>